<div class="container">
  <div class="row my-3">
    <div class="col-3 d-flex align-items-center justify-content-center">
      <h1>店舗情報編集</h1>
    </div>
    <div class="col-4 d-flex align-items-center justify-content-center">
    <%= form_with model: @admin, url: admin_path(@admin.id), method: :patch do |f| %>
      <div class="field mb-4">
        <h4>メールアドレス</h4>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field mb-4">
        <h4>店舗名</h4>
        <%= f.text_field :gym_name %>
      </div>
      <div class="field mb-4">
        <h4>店舗画像</h4>
        <%= f.file_field :gym_image, accept: "image/*" %>
      </div>
      <div class="field mb-4">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>
      </div>
    </div>
      <div class="col-5">
        <h4>現在の店舗画像</h4>
      <%= image_tag @admin.get_gym_image(400,400) %>
      </div>
  </div>
</div>