<div class="container">
    <% @machines. each do |machine| %>
  <div class="row my-5 border-bottom border-dark">
    <div class="col-4">
      <%= image_tag machine.get_machine_image(300,300), class:"mb-5" %>
    </div>
    <div class="col-8">
      <table style="height: 250px">
        <thead>
        <tr>
          <th class="h1">【<%= machine.machine_name %>】</th>
          <td class="h3"><%= machine.machine_status_i18n %></td>
        </tr>
        </thead>
        <tbody class="h3">
          <tr>
            <td>説明：<%= machine.explanation %></td>
          </tr>
          <tr>
            <td>部位：<%= machine.site.site_name %></td>
          </tr>
          <tr>
            <td>
            <% if member_signed_in? %>
              <%= link_to "このマシンを使用したトレーニングを投稿する", new_public_post_path(machine_id: machine.id), class:"btn btn-success" %></td>
            <% else %>
              <%= link_to "会員登録してトレーニングを投稿する", new_member_registration_path, class:"btn btn-success" %></td>
            <% end %>
          </tr>
            <tr>
              <td>
              <%= link_to "このマシンを使用したトレーニング一覧", public_post_index_machine_path(machine_id: machine.id), class:"btn btn-warning text-white" %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    </div>
    <% end %>
</div>