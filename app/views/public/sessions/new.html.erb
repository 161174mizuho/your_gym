<div class="container">
  <div class="row my-3">
    <div class="col-6 d-flex align-items-center justify-content-center">
      <h2>会員様ログイン</h2>
    </div>
    <div class="col-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-2" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in" ,class:"btn btn-success mr-1" %>
        <%= render "public/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
