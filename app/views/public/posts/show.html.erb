<div class="container">
  <div class="row my-5">
    <div class="col-6">
      <%= image_tag @post.get_post_image(500,500) %>
    </div>
    <div class="col-6">
      <h3>マシン名：<%= @post.machine.machine_name %></h3>
      <h3>説　　明：</h3>
      <h3></h3><%= @post.machine.site.site_name %>
      <%= @post.machine.admin.gym_name %>
    </div>
  </div>
  <div class="row">
    <p>コメント件数：<%= @post.comments.count %></p>
    <%= form_with model: [@post, @comment], url: public_post_comment_index_path, method: :post do |f| %>
      <%= f.text_area :commnet, rows: '5', placeholder: "コメントをここに" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
</div>