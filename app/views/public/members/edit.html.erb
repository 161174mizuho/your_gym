<div class="container">
  <div class="row my-3">
    <div class="col-4 d-flex align-items-center justify-content-center">
    <%= form_with model: @member, url: public_member_path(@member.id), method: :patch do |f| %>
      <h1>会員情報編集</h1>
    </div>
    <div class="col-4">
      <div class="field mb-4">
        <h4>メールアドレス</h4>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field mb-4">
        <h4>ユーザー名</h4>
        <%= f.text_field :name %>
      </div>
      <div class="field mb-4">
        <h4>アイコン</h4>
        <%= f.file_field :icon, accept: "image/*" %>
      </div>
      <div class="field mb-4">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
      <div class="col-4">
        <% if @member.icon.attached? %>
        <%= image_tag @member.icon %>
      <% else %>
        <%= image_tag "no_image", size:"200×200" %>
      <% end %>
      </div>
  </div>
</div>