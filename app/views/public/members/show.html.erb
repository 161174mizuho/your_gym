<div class="container">
  <div class="row my-5">
    <div class="col-6 d-flex align-items-center justify-content-center">
      <% if @member.icon.attached? %>
        <%= image_tag @member.icon %>
      <% else %>
        <%= image_tag "no_image", size:"200×200" %>
      <% end %>
    </div>
    <div class="col-6">
    <table class="table">
      <tr>
        <th>ユーザー名</th>
        <td><%= @member.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>
    </table>
      <%= link_to "会員情報編集", edit_public_member_path(@member.id), class:"btn btn-primary" %>
      <!--<= link_to "my口コミ一覧", public_posts_path, class:"btn btn-primary mx-5" %>-->
      <!--<= link_to "myトレーニング一覧", edit_public_member_path(@member), class:"btn btn-primary" %>-->
    </div>
  </div>
</div>