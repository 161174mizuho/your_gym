<div class="container">
  <div class="row my-3">
    <div class="col-6 d-flex align-items-center justify-content-center">
      <h2>新規会員登録</h2>
    </div>
    <div class="col-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :name, class:"mb-4" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-4" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以内)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"mb-4"%>
      </div>
      <div class="field">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-4"%>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-success mr-3" %>
        <%= render "public/shared/links" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
